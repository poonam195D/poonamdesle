
variable "adminPassword" {
  type    = string
  default = ""
}

# "timestamp" template function replacement
locals { timestamp = regex_replace(timestamp(), "[- TZ:]", "") }

source "amazon-ebs" "autogenerated_1" {
  ami_description = "Ubuntu 24.04 with Jenkins"
  ami_name        = "ubuntu-jenkins-server-docker ${formatdate("YYYY-MM-DD hh-mm-ss", timestamp())}"
  instance_type   = ""
  region          = ""
  source_ami_filter {
    filters = {
      name                = "ubuntu/images/hvm-ssd-gp3/ubuntu-noble-24.04-amd64-server-*"
      root-device-type    = "ebs"
      virtualization-type = "hvm"
    }
    most_recent = true
    owners      = [""]
  }
  spot_price              = "auto"
  spot_price_auto_product = "Linux/UNIX"
  ssh_username            = "ubuntu"
  tags = {
    Name = ""
  }
}

build {
  sources = ["source.amazon-ebs.autogenerated_1"]

  provisioner "file" {
    destination = "/tmp"
    source      = "./$folder_location"
  }
  provisioner "file" {
    destination = "/tmp/files"
    source      = "$folder_location"
  }
  provisioner "shell" {
    script     = "./$folder_location"
    skip_clean = false
  }
}
# Packer file for kubernetes agent

The kubernetes agent require the basic installation related kubectl and helm.

# Command to upgrade packer script
packer hcl2_upgrade

# Command to create ami using packer

packer build ubuntu-agent.json.pkr.hcl
